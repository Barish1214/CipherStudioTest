@model IEnumerable<DataAccessLayer.Entities.Student>

<h2>Student List</h2>

<div class="row">
    <div class="col-md-4">
        <form method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-8 text-right">
        <input type="button" value="Add Student Info" class="btn btn-primary"
               onclick="window.location.href='@Url.Action("Create", "Student")'" />
    </div>
</div>


<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Roll Number</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Class</td>
                <td>@student.RollNumber</td>
                <td>@student.Age</td>
            </tr>
        }
    </tbody>
</table>
